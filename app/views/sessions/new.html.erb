<h1 class="text-center">Sign in</h1>
<hr>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= render partial: 'shared/flash' %>

        <%= form_for(:session, url: signin_path) do |f| %>

            <div class="form-group">
                <%= f.label :email %>
                <%= f.text_field :email, class: 'form-control' %>
            </div>

            <div class="form-group">
                <%= f.label :password %> <%= link_to '(forgot password)', new_password_reset_path %>
                <%= f.password_field :password, class: 'form-control' %>
            </div>

            <div class="checkbox">
                <%= f.label :remember_me do %>
                    <%= f.check_box :remember_me %>
                    Remember me on this computer
                <% end %>
            </div>

            <div>
              <%= f.submit 'Sign in', class: 'btn btn-lg btn-primary btn-block' %>
            </div>
        <% end %>

        <%= render partial: 'shared/form_footer', locals: { text: link_to('Sign up', signup_path) + ', if you do not have account yet.' } %>

    </div>
</div>