<div class="row">
  <div class="col-md-3 book-cover-lg">
    <%= amazon_book_cover(@book.amazon_id, @book.title) %>
  </div>
  <div class="col-md-7">
    <h1><%= h(@book.title) %></h1>
    <div>by <strong><%= h(@book.author) %></strong> (author)</div>
    <div>ISBN: <%= @book.isbn %></div>
    <div>Publisher: <%= h(@book.publisher) %></div>
    <div>Publisher: <%= @book.pub_date %></div>
    <div>Rating: <%= @book.rating %></div>
    <div>Description: <%= h(@book.description) %></div>
  </div>
  <div class="col-md-2">
      <p class="text-center price-box">$<%= @book.price %></p>
      <p class="text-center"><%= link_to 'Add to Cart', '#', class: 'btn btn-md btn-primary add-to-cart-btn' %></p>
  </div>
</div>